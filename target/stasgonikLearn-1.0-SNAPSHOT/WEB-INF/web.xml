<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>

    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/error.jsp</location>
    </error-page>
    <servlet>
        <servlet-name>RegisterToDB</servlet-name>
        <servlet-class>com.epam.GSI.servlets.registerToDB</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterToDB</servlet-name>
        <url-pattern>/registerToDB</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginToOffice</servlet-name>
        <servlet-class>com.epam.GSI.servlets.loginToOffice</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginToOffice</servlet-name>
        <url-pattern>/loginToOffice</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ChangeUser</servlet-name>
        <servlet-class>com.epam.GSI.servlets.changeUserAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChangeUser</servlet-name>
        <url-pattern>/changeUserAction</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteUser</servlet-name>
        <servlet-class>com.epam.GSI.servlets.deleteUserAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteUser</servlet-name>
        <url-pattern>/deleteUserAction</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegisterAccount</servlet-name>
        <servlet-class>com.epam.GSI.servlets.registerAccountAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterAccount</servlet-name>
        <url-pattern>/registerAccountAction</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AccountAction</servlet-name>
        <servlet-class>com.epam.GSI.servlets.accountAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccountAction</servlet-name>
        <url-pattern>/accountAction</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>changeCourse</servlet-name>
        <servlet-class>com.epam.GSI.servlets.changeCurCourseAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>changeCourse</servlet-name>
        <url-pattern>/changeCurCourseAction</url-pattern>
    </servlet-mapping>


</web-app>



